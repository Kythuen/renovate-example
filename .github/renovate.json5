{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: ['config:base', 'schedule:weekly', 'group:allNonMajor'],
  labels: ['dependencies'],
  rangeStrategy: 'bump',
  packageRules: [
    {
      matchDepTypes: ['peerDependencies'],
      enabled: false
    },
    {
      groupName: 'test',
      matchPackageNames: ['vitest', 'jsdom', '@vitest{/,}**']
    },
    {
      groupName: 'build',
      matchPackageNames: ['vite', 'vue-tsc'],
      matchPackagePrefixes: ['rollup', 'esbuild', '@rollup', '@vitejs']
    },
    {
      groupName: 'types',
      matchPackageNames: ['typescript', '@types/node', 'vue-tsc']
    },
    {
      groupName: 'lint',
      matchPackageNames: [
        'vite',
        'vue-tsc',
        'rollup{/,}**',
        'esbuild{/,}**',
        '@rollup{/,}**',
        '@vitejs{/,}**'
      ]
    },
    {
      groupName: 'lint',
      matchPackageNames: [
        'husky',
        'lint-staged',
        'commitizen',
        'cz-conventional-changelog',
        '@commitlint{/,}**',
        '@typescript-eslint{/,}**',
        'typescript-eslint{/,}**',
        'eslint{/,}**',
        'prettier{/,}**'
      ]
    }
  ],
  ignoreDeps: []
}
