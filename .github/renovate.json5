{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:recommended", "group:allNonMajor", ":prHourlyLimitNone"],
  labels: ["dependencies"],
  rangeStrategy: "bump",
  schedule: ["before 12am"],
  packageRules: [
    {
      matchDepTypes: ["peerDependencies"],
      enabled: false,
    },
    {
      groupName: "test",
      matchPackageNames: ["vitest", "jsdom", "@vitest{/,}**"],
    },
    {
      groupName: "build",
      matchPackageNames: [
        "vite",
        "vue-tsc",
        "rollup{/,}**",
        "esbuild{/,}**",
        "@rollup{/,}**",
        "@vitejs{/,}**",
      ],
    },
    {
      groupName: "lint",
      matchPackageNames: [
        "husky",
        "lint-staged",
        "commitizen",
        "cz-conventional-changelog",
        "@commitlint{/,}**",
        "@typescript-eslint{/,}**",
        "typescript-eslint{/,}**",
        "eslint{/,}**",
        "prettier{/,}**",
      ],
    },
  ],
  ignoreDeps: ["vue", "node", "typescript"],
}
