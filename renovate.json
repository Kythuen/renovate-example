{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "labels": ["dependencies"],
  "dependencyDashboard": true,
  "automerge": true,
  "automergeSchedule":  ["before 0am"],
  "separateMinorPatch": true,
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "automerge": true,
      "automergeSchedule": ["before 0am"]
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeSchedule": ["before 0am"]
    }
  ]
}
